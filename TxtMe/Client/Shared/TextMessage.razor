<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>

    <p class="text-nowrap">
        From: @From
    </p>
    <p class="text-nowrap">
        To: @To
    </p>
    <p class="text-nowrap">
        Message: @Message 
    </p>
</div>

@code { 
    [Parameter]
    public string From { get; set; }

    [Parameter]
    public string To { get; set; }

    [Parameter]
    public string Message { get; set; }
}